<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dish 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Caesar Salad"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp" />

            <RatingBar
                android:id="@+id/caesarSaladRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/caesarSaladRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 0"
                android:textColor="@android:color/darker_gray"
                android:paddingBottom="16dp" />

            <!-- Dish 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Spaghetti Carbonara"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <RatingBar
                android:id="@+id/spaghettiCarbonaraRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/spaghettiCarbonaraRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 0"
                android:textColor="@android:color/darker_gray"
                android:paddingBottom="16dp" />

            <!-- Additional Dishes -->

            <!-- Dish 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Margherita Pizza"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <RatingBar
                android:id="@+id/margheritaPizzaRatingBar"
